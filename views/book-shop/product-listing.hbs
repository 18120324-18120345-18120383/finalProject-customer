                    <div class="text-center d-flex justify-content-center align-items-center">
                      <a class="listing-cart-icon" onclick="addOneItem('{{_id}}')">
                        <i class="fa fa-shopping-cart"></i>
                      </a>
                    </div>
                  </div>
                </div>
                <div class="p-item-detail">
                  <h4 class="text-center p-item-name"><a href="product-detail/{{_id}}"> {{name}} </a>
                  </h4>
                  <p class="text-center p-item-price">{{basePrice}} $</p>
                </div>
              </div>
              {{/each}}
            </div>
            <!-- END DISPLAY PRODUCT -->
            {{!-- Pagination --}}
            <div class="center">
              {{#unless hasPrevPage}}
              {{#unless hasNextPage}}
              <div class="pagination">
                <a onclick="paging('{{page}}')" class="btn active">{{page}}</a>
