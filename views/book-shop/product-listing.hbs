                <a onclick="paging('{{prevPage}}')">&laquo;</a>
                <a onclick="paging('{{prevPage}}')" class="btn">{{prevPage}}</a>
                <a onclick="paging('{{page}}')" class="btn active">{{page}}</a>
                {{!-- <a href="#">&raquo;</a> --}}
              </div>
              {{else}}
              <div class="pagination">
                <a onclick="paging('{{prevPage}}')">&laquo;</a>
                <a onclick="paging('{{prevPage}}')" class="btn">{{prevPage}}</a>
                <a onclick="paging('{{page}}')" class="btn active">{{page}}</a>
                <a onclick="paging('{{nextPage}}')" class="btn">{{nextPage}}</a>
                <a onclick="paging('{{nextPage}}')">&raquo;</a>
              </div>
              {{/unless}}
              {{/unless}}
            </div>
          </div>
          <!-- END PRODUCT LISTING SECTION -->
        </div>
      </div>
      <!-- END PRODUCT COL 8 -->
    </div>
  </div>
</div>
