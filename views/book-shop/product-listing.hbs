                  <div class="item p-item-img">
                    <img src="data:{{coverTypes.[0]}};charset=utf-8;base64,{{coversString.[0]}}" alt="images">
                    <div class="text-center d-flex justify-content-center align-items-center">
                      <a class="listing-cart-icon" onclick="addOneItem('{{_id}}')">
                        <i class="fa fa-shopping-cart"></i>
                      </a>
                    </div>
                  </div>
                  <div class="item p-item-img">
                    <img src="data:{{coverTypes.[0]}};charset=utf-8;base64,{{coversString.[0]}}" alt="images" width="500px" height="500px">
                    <div class="text-center d-flex justify-content-center align-items-center">
                      <a class="listing-cart-icon" onclick="addOneItem('{{_id}}')">
                        <i class="fa fa-shopping-cart"></i>
                      </a>
                    </div>
                  </div>
                  <div class="item p-item-img">
