    <div class="row no-gutters">

      <!-- START STICKY NAV -->
      <div class="col-12 col-lg-4 order-2 order-lg-1 sticky megamenu-custom">
        <div id="product-filter-nav" class="product-filter-nav mb-3">
          <div class="nav-item product-category mb-3">
            <a class="collapsePagesSideMenu" data-toggle="collapse" href="#sideNavPages2">
              <h5 class="filter-heading  text-center text-lg-left">Category</h5>
              <i class="fas fa-chevron-down"></i>
            </a>
            <div id="sideNavPages2" class="collapse sideNavPages">
              <ul class="navbar-nav">
                {{#each categories}}
                <li><a onclick="insertParam('categoryID', '{{_id}}')">{{this.name}}</a><span>({{numberOfBook}})</span>
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div class="product-price mt-1">
            <h5 class="filter-heading">Shop By</h5>
            <div id="slider-range"></div>
            <p class="price-num" style="color: #0b2e13;">Price:
              <span id="min-p"></span>
              <span id="max-p"></span></p>
            <input name="minPrice" id="minPrice" hidden>
            <input name="maxPrice" id="maxPrice" hidden>
          </div>
          <ul class="color-grey">
            <li>
              <div class="custom-control custom-radio">
                <input type="radio" id="default-sort" name="sort" class="custom-control-input" value="defualt"
                  checked="" value="default">
                <label class="custom-control-label" for="default-sort">Default</label>
              </div>
            </li>
            <li>
              <div class="custom-control custom-radio">
                <input type="radio" id="increase-sort" name="sort" class="custom-control-input" value="increase">
                <label class="custom-control-label" for="increase-sort">Increase</label>
              </div>
            </li>
            <li>
              <div class="custom-control custom-radio">
                <input type="radio" id="decrease-sort" name="sort" class="custom-control-input" value="decrease">
                <label class="custom-control-label" for="decrease-sort">Decrease</label>
              </div>
            </li>
          </ul>
          <button class="btn yellow-color-green-gradient-btn mt-1" onclick="filterPrice()">Filter</button>
          <div class="product-add mt-4">
            <div class="row no-gutters">
              <div class="col-12">
                <img src="img\advertisement.jpg" alt="images">
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- END STICKY NAV -->

      <!-- START PRODUCT COL 8 -->
